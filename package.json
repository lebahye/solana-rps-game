{
  "name": "solana-rps-game",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "testing"
  ],
  "scripts": {
    "clean": "rimraf ./**/node_modules",
    "setup": "bun install",
    "frontend:dev": "cd frontend && bun dev",
    "frontend:build": "cd frontend && bun run build",
    "backend:build": "cd backend/solana-program && cargo build-bpf",
    "backend:deploy": "cd backend/solana-program && solana program deploy target/deploy/rps_game.so",
    "test": "cd testing && bun test",
    "test:security": "cd testing && bun run test:security"
  }
}
